{% include 'header.html.twig' %}
<!--<h1>Beheer vertegenwoordigers</h1>-->
<div class="reps">
    <div class="reps-header">
        <div class="header">{{ 'Representatives' | trans }}</div>
        <a class="button" href="{{ path('representative', { type : 'new' }) }}">
            <i class="fas fa-plus"></i>
            {{ 'Add representative' | trans }}
        </a>
    </div>
    {% for representative in representatives %}
        <div class="reps-row">
            <div class="reps-row-metadata">
                <div class="reps-row-org">
                    <div>{{ 'Organisation' | trans }}:</div>
                    {% if organisation_names[representative.organisation] is defined %}
                        <div>{{ organisation_names[representative.organisation] }}</div>
                    {% else %}
                        <div></div>
                    {% endif %}
                </div>
                <div class="reps-row-alias">
                    <div>{{ 'Alias' | trans }}:</div>
                    <div>{{ representative.alias }}</div>
                </div>
                <div class="reps-row-name">
                    <div>{{ 'Name' | trans }}:</div>
                    <div>{{ representative.name }}</div>
                </div>
                <div class="reps-row-role">
                    <div>{{ 'Role' | trans }}:</div>
                    <div>{{ representative.role }}</div>
                </div>
                <div class="reps-row-email">
                    <div>{{ 'E-mail' | trans }}:</div>
                    <div>{{ representative.email }}</div>
                </div>
                <div class="reps-row-phone">
                    <div>{{ 'Telephone' | trans }}:</div>
                    <div>{{ representative.phone }}</div>
                </div>
            </div>
            <div class="reps-row-actions">
                <a class="table-cell" href="{{ path('representative', { id: representative.id }) }}">
                    <!--Wijzig-->
                    <i class="fas fa-pencil-alt"></i>
                </a>
                <a class="table-cell" href="{{ path('representative', { id: representative.id, action: 'delete' }) }}"
                   onclick="return confirm('{% if app.request.locale == 'nl' %}Bent u zeker dat u de vertegenwoordiger {{ representative.alias }} wilt verwijderen?{% else %}Are you sure you want to delete the representative {{ representative.alias }}?{% endif %}')">
                    <!--Verwijder-->
                    <i class="fas fa-trash-alt"></i>
                </a>
            </div>
        </div>
    {% endfor %}
</div>
{% include 'footer.html.twig' %}
