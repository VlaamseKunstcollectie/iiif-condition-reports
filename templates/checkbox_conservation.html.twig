{% if readonly %}
    {% if prefilled_data[name] is defined and prefilled_data[name] is not empty or prefilled_data[name ~ '_text'] is defined and prefilled_data[name ~ '_text'] is not empty %}
    <span class="readonly-label">{{ label }}: </span>
    <input id="{{ name }}_checkbox_right_text" name="{{ name }}_checkbox" type="checkbox" checked disabled/>
    <span class="readonly-input">{% if prefilled_data[name] is defined and prefilled_data[name] is not empty %}{{ prefilled_data[name] }}{% endif %}</span>
    {% if prefilled_data[name ~ '_text'] is defined and prefilled_data[name ~ '_text'] is not empty %}<span class="readonly-input">{{ prefilled_data[name ~ '_text'] }}</span>{% endif %}
    {% endif %}
{% else %}
    <label for="{{ name }}_checkbox">{{ label }}</label>
    <input id="{{ name }}_checkbox" name="{{ name }}_checkbox" type="checkbox"{% if prefilled_data[name] is defined and prefilled_data[name] is not empty %} checked{% endif %} onclick="if(!this.checked) { this.parentElement.querySelectorAll('#{{ name }}_checkbox_number')[0].value = ''; this.parentElement.querySelectorAll('#{{ name }}_checkbox_text')[0].value = ''; }"{% if disabled is defined and disabled %} disabled{% endif %}/>
    <input type="number" id="{{ name }}_checkbox_number" oninput="this.parentElement.querySelectorAll('#{{ name }}_checkbox')[0].checked = this.value !== '' || this.parentElement.querySelectorAll('#{{ name }}_checkbox_text')[0].value !== '';" name="{{ name }}" value="{% if prefilled_data[name] is defined and prefilled_data[name] is not empty %}{{ prefilled_data[name] }}{% endif %}"{% if disabled is defined and disabled %} disabled{% endif %}/>
    <input type="text" id="{{ name }}_checkbox_text" name="{{ name }}_text" value="{% if prefilled_data[name ~ '_text'] is defined and prefilled_data[name ~ '_text'] is not empty %}{{ prefilled_data[name ~ '_text'] }}{% endif %}" oninput="this.parentElement.querySelectorAll('#{{ name }}_checkbox')[0].checked = this.value !== '' || this.parentElement.querySelectorAll('#{{ name }}_checkbox_number')[0].value !== '';"{% if disabled is defined and disabled %} disabled{% endif %}/>
{% endif %}
